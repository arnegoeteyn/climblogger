<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                style="@style/IdentifierLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/IdentifierText"
                    android:text="@string/name_identifier" />

            <TextView
                    android:id="@+id/nameText"
                    style="@style/IdentifierValue"
                    android:text="" />
        </LinearLayout>

        <LinearLayout
                style="@style/IdentifierLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/IdentifierText"
                    android:text="@string/country_identifier" />

            <TextView
                    android:id="@+id/countryText"
                    style="@style/IdentifierValue"
                    android:text="" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sectorsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
            android:id="@+id/linearLayout4"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <Button
                android:id="@+id/add_sector_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_sector" />

        <Button
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_area" />

        <com.example.climblogger.util.ConfirmationButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_area" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

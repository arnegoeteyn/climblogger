<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <!--    Some defaults -->
    <style name="DefaultTextAppearance" parent="TextAppearance.AppCompat">
        <!--Text should always have some margin-->
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <!-- Styles for an identifiers, for example [Name] name_of_route, where [Name] is the identifier -->
    <style name="IdentifierText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="IdentifierValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="IdentifierLinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

</resources>

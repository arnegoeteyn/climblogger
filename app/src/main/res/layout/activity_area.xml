<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.area.AreaActivity">

    <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                style="@style/IdentifierLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/IdentifierText"
                    android:text="@string/name_identifier" />

            <TextView
                    style="@style/IdentifierValue"
                    android:id="@+id/nameText"
                    android:text="" />
        </LinearLayout>

        <LinearLayout
                style="@style/IdentifierLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/IdentifierText"
                    android:text="@string/country_identifier" />

            <TextView
                    style="@style/IdentifierValue"
                    android:id="@+id/countryText"
                    android:text="" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sectorsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

        <Button
                android:id="@+id/add_sector_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_sector" />

        <Button
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_area" />

        <com.example.climblogger.util.ConfirmationButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_area" />
    </LinearLayout>
</LinearLayout>